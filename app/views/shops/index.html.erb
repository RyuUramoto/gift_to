<p id="notice"><%= notice %></p>

<h1>Listing Shops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image path</th>
      <th>Address</th>
      <th>Tel</th>
      <th>Abstract</th>
      <th>Store hours</th>
      <th>Category</th>
      <th>Situation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.image_path %></td>
        <td><%= shop.address %></td>
        <td><%= shop.tel %></td>
        <td><%= shop.abstract %></td>
        <td><%= shop.store_hours %></td>
        <td><%= shop.category %></td>
        <td><%= shop.situation %></td>
        <td><%= link_to 'Show', shop %></td>
        <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

