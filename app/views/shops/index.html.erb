<p id="notice"><%= notice %></p>

<h1>Listing Shops</h1>
<h2>検索条件</h2>
<p>カテゴリー:<%= @shops.conditions_categorys.join(",") %></p>
<p>シチュエーション:<%= @shops.conditions_situation unless @shops.conditions_situation == "false" %></p>
<p>地域:<%= @shops.area %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image path</th>
      <th>Address</th>
      <th>Tel</th>
      <th>Abstract</th>
      <th>Store hours</th>
      <th>Category</th>
      <th>Situation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.shops.each do |shop| %>
      <tr>
        <td><%= link_to shop.name, shop_path(shop.id) %></td>
        <td><%= shop.image_path %></td>
        <td><%= shop.address %></td>
        <td><%= shop.tel %></td>
        <td><%= shop.abstract %></td>
        <td><%= shop.store_hours %></td>
        <td><%= shop.category %></td>
        <td><%= shop.situation %></td>
        <td><%= link_to 'Show', shop %></td>
        <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><img src = <%= shop.image_path %> /></td>
      </tr>
    <% end %>
  </tbody>
</table>


