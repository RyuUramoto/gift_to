    <li><%= f.radio_button :situation, "false", {id: "top_situation1" ,checked: true} %><%= f.label 'situation1', "未選択" %></li>
    <li><%= f.radio_button :situation, "present", {id: "top_situation2"} %><%= f.label 'situation2', "Present" %></li>
    <li><%= f.radio_button :situation, "birthday", {id: "top_situation3"} %><%= f.label 'situation3', "Birthday" %></li>
  </dd>

  <dt><%= f.label "地域" %></dt>
  <dd><li><%= f.text_field :area, :class => 'textField', :placeholder => "未入力なら現在地で検索"%></li></dd>
</dl>
<%= f.submit 'お店を検索', :class => 'submitBtn'%>
<% end %>
