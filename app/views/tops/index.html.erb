<div id="info">
  <p>プレゼント選びでお困りの方へ</p>
</div>

<div id="form">
  <div class="formInner">
    <%= form_for "top", :url => shops_path do |f| %>
    <dl>
      <dt><%= f.label "カテゴリー" %></dt>
        <dd>
          <li><%= f.check_box :category, {multiple: true}, "food", nil %><%= f.label "Food" %></li>
          <li><%= f.check_box :category, {multiple: true}, "ring", nil %><%= f.label "Ring" %></li>          </dd>

      <dt><%= f.label "シチュエーション" %></dt>
        <dd>
          <li><%= f.radio_button :situation, "false", {checked: true} %><%= f.label "未選択" %></li>
          <li><%= f.radio_button :situation, "present", {} %><%= f.label "Present" %></li>
          <li><%= f.radio_button :situation, "birthday", {} %><%= f.label "Birthday" %></li>
        </dd>

      <dt><%= f.label "地域" %></dt>
        <dd><li><%= f.text_field :area, :size => '30', :placeholder => "未入力なら現在地で検索"%></li></dd>
    </dl>
    <%= f.submit 'お店を検索', :class => 'submitBtn'%>
    <% end %>
  </div>
</div>
