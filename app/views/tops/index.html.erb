<div id="info">
  <div class="innner">
    <p>プレゼント選びでお困りの方へ</p>
  </div>
</div>

<div id="form">
  <div class="formInner">
    <%= form_for "top", :url => shops_path do |f| %>
    <dl>
      <dt><%= f.label "カテゴリー" %></dt>
      <dd>
        <li><%= f.check_box :category, {multiple: true}, "ネックレス", nil %><%= f.label "ネックレス" %></li>
        <li><%= f.check_box :category, {multiple: true}, "財布", nil %><%= f.label "財布" %></li>
        <li><%= f.check_box :category, {multiple: true}, "ブレスレット", nil %><%= f.label "ブレスレット" %></li>
        <li><%= f.check_box :category, {multiple: true}, "指輪", nil %><%= f.label "指輪" %></li>
        <li><%= f.check_box :category, {multiple: true}, "キーケース", nil %><%= f.label "キーケース" %></li>
        <li><%= f.check_box :category, {multiple: true}, "腕時計", nil %><%= f.label "腕時計" %></li>
        <li><%= f.check_box :category, {multiple: true}, "定期入れ", nil %><%= f.label "定期入れ" %></li>
        <li><%= f.check_box :category, {multiple: true}, "名刺入れ", nil %><%= f.label "名刺入れ" %></li>
        <li><%= f.check_box :category, {multiple: true}, "バッグ", nil %><%= f.label "バッグ" %></li>
        <li><%= f.check_box :category, {multiple: true}, "ピアス", nil %><%= f.label "ピアス" %></li>
        <li><%= f.check_box :category, {multiple: true}, "ポーチ", nil %><%= f.label "ポーチ" %></li>
        <li><%= f.check_box :category, {multiple: true}, "ボールペン", nil %><%= f.label "ボールペン" %></li>
        <li><%= f.check_box :category, {multiple: true}, "化粧品", nil %><%= f.label "化粧品" %></li>
        <li><%= f.check_box :category, {multiple: true}, "ネクタイ", nil %><%= f.label "ネクタイ" %></li>
        <li><%= f.check_box :category, {multiple: true}, "スマホケース", nil %><%= f.label "スマホケース" %></li>
      </dd>

        <dt><%= f.label "シチュエーション" %></dt>
        <dd>
          <li><%= f.radio_button :situation, "false", {checked: true} %><%= f.label "未選択" %></li>
          <li><%= f.radio_button :situation, "present", {} %><%= f.label "Present" %></li>
          <li><%= f.radio_button :situation, "birthday", {} %><%= f.label "Birthday" %></li>
        </dd>

        <dt><%= f.label "地域" %></dt>
        <dd><li><%= f.text_field :area, :size => '30', :placeholder => "未入力なら現在地で検索"%></li></dd>
      </dl>
      <%= f.submit 'お店を検索', :class => 'submitBtn'%>
      <% end %>
    </div>
  </div>
